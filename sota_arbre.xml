<?xml version="1.0" encoding="UTF-8"?>

<sota_meta>
    <head>
        <!--Metadonnées du document, auteurs, dates, description etc?-->
        <titre></titre>
        <auteur></auteur>
        <date_creation></date_creation>
        <description></description>
    </head>
    <body>
        <data_colaf>
            <!--Métadonnées pour la description de Colaf (de type corpus, document ou structuration (balise pour le texte))-->
            <attribut nom="nom de l'attribut" xml:id="identifiant" type="corpus">
                <description/>
                <valeur nom="nom de la valeur" xml:id="identifiant">
                    <description/>
                </valeur>
                <valeur nom="nom de la valeur" xml:id="identifiant"></valeur>
                <attribut nom="nom de l'attribut" xml:id="identifiant" type="corpus">
                    <valeur nom="nom de la valeur" xml:id="identifiant">
                        <valeur nom="nom de la valeur" xml:id="identifiant">
                            <description/>
                        </valeur>
                    </valeur>
                    
                </attribut>
            </attribut>
            
            <attribut nom="nom de l'attribut" xml:id="identifiant" type="doc">
                <description/>
                <valeur nom="nom de la valeur" xml:id="identifiant">
                    <description/>
                </valeur>
            </attribut>
            <attribut nom="nom de l'attribut" xml:id="identifiant" type="structuration">
                <description/>
                <valeur nom="nom de la valeur" xml:id="identifiant">
                    <description/>
                    <valeur nom="nom de la valeur" xml:id="identifiant">
                        <description/>
                    </valeur>
                </valeur>
            </attribut>
                     
        </data_colaf>
        <grp-corpus>
            <corpus>
                <!--Pour chaque corpus étudié-->
                <head>
                    <!--Metadonnées brèves du corpus-->
                    <name xml:id="identifiant du corpus" url="url">Nom du corpus</name>
                    <description>Description rapide du corpus étudié</description>
                    <auteur>Auteur du corpus</auteur>
                    <date>Date de création du corpus</date>
                    <docCorpus quant="quantité de doc totale">
                        <docType quant="quantité de doc de ce type">type de document (journal, etc...)</docType>
                    </docCorpus>
                    <refbib type="bibtex">Citation BibTeX</refbib>
                    
                </head>
                <data_corpus>
                        <!--Métadonnées utilisées par le corpus pour sa description (du corpus lui-même, des documents et du contenu des docs.-->
                    <!-- On ajoute ici la langue décrite avant plus haut pour permettre de voir quelles sont les normes employées par les corpus-->
                        <attribut nom="nom de l'attribut" ref="#identifiant" type="corpus">
                            <commmentaire/>
                            <valeur nom="nom de la valeur" ref="#identifiant">
                                <commentaire/>
                            </valeur>
                            <valeur nom="nom de la valeur" ref="#identifiant"></valeur>
                            <attribut nom="nom de l'attribut" ref="#identifiant" type="corpus">
                                <valeur nom="nom de la valeur" ref="#identifiant">
                                    <valeur nom="nom de la valeur" ref="#identifiant">
                                        <commentaire/>
                                    </valeur>
                                </valeur>
                                
                            </attribut>
                        </attribut>
                        <attribut nom="nom de l'attribut" ref="#identifiant" type="doc">
                            <commentaire/>
                            <valeur nom="nom de la valeur" ref="#identifiant">
                                <valeur nom="nom de la valeur" ref="#identifiant">
                                    <commentaire/>
                                </valeur>
                            </valeur>
                        </attribut>
                        <attribut nom="nom de l'attribut" ref="#identifiant" type="structuration">
                            <valeur nom="nom de la valeur" ref="#identifiant">
                                <commentaire/>
                            </valeur>
                        </attribut>
                </data_corpus>
            </corpus>
        </grp-corpus>
    </body>
</sota_meta>
