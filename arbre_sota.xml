<?xml version="1.0" encoding="UTF-8"?>

<?xml-model href="schema_sota_arbre.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<sota_meta>
    <head>
        <!--Metadonnées du document, auteurs, dates, description etc?-->
        <titre/>
        <auteur/>
        <date_creation/>
        <description/>
    </head>
    <body>
        <data_colaf>
            <!--Métadonnées pour la description de Colaf (de type corpus, document ou structuration (balise pour le texte))-->
            <attribut nom="id" type="doc" xml:id="id">
                <description>Identifiant du document</description>
            </attribut>
            <attribut nom="ignore" type="all" xml:id="ignore">
                <description/>
            </attribut>
        </data_colaf>
        <grp-corpus>
            <corpus>
                <!--Pour chaque corpus étudié-->
                <head>
                    <name xml:id="dh_abstract" url="https://dh-abstracts.library.virginia.edu/">The
                        Index of Digital Humanities Conferences</name>
                    <description>Corpus de présentations issues de conférences en humanités
                        numériques sur 60 ans</description>
                    <auteur>Carnegie Mellon University Libraries</auteur>
                    <date type="creation">10-10-2023</date>
                    <refbib type="bibtex"/>
                </head>
                <data_corpus>
                    <attribut nom="work_id" type="doc" ref="id">
                        <commentaire/>
                    </attribut>
                    <attribut nom="conference" type="corpus" ref="ignore">
                        <commentaire/>
                        <attribut nom="conference_short_title" type="corpus" ref="ignore">
                            <commentaire/>
                        </attribut>
                        <attribut nom="conference_theme_title" type="corpus" ref="ignore">
                            <commentaire/>
                        </attribut>
                        <attribut nom="conference_year" type="corpus" ref="ignore">
                            <commentaire/>
                            <valeur nom="0000" ref="ignore">
                                <commentaire/>
                            </valeur>
                        </attribut>
                        <attribut nom="conference_organizers" type="corpus" ref="ignore">
                            <commentaire/>
                        </attribut>
                        <attribut nom="conference_series" type="corpus" ref="ignore">
                            <commentaire/>
                        </attribut>
                        <attribut nom="conference_hosting_institutions" type="corpus" ref="ignore">
                            <commentaire>Non obligatoire, ajout manuel de la valeur</commentaire>
                        </attribut>
                        <attribut nom="conference_city" type="corpus" ref="ignore">
                            <commentaire>Non obligatoire, ajout manuel de la valeur</commentaire>
                        </attribut>
                        <attribut nom="conference_state" type="corpus" ref="ignore">
                            <commentaire>Non obligatoire, ajout manuel de la valeur</commentaire>
                        </attribut>
                        <attribut nom="conference_country" type="corpus" ref="ignore">
                            <commentaire/>
                            <valeur nom="https://vocab.getty.edu/tgn/" ref="ignore">
                                <commentaire>Pays extraits du thesaurus of geographic names du
                                    getty</commentaire>
                            </valeur>
                        </attribut>
                        <attribut nom="conference_url" type="corpus" ref="ignore">
                            <commentaire/>
                        </attribut>
                    </attribut>

                    <attribut nom="work_title" type="doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="work_authors" type="doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="work_type" type="doc" ref="ignore">
                        <commentaire>10 types de documents possibles</commentaire>
                        <valeur nom="multipaper session" ref="ignore">
                            <commentaire>Peut être parent d'autres papiers mais pas
                                forcément.</commentaire>
                            <valeur nom="paper" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="poster/demo/art installation" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="panel / roundtable" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="keynote / plenary" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="paper, specified 'short_paper'" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="paper, specified 'long paper'" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="workshop / tutorial" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="lightening talk" ref="ignore">
                                <commentaire/>
                            </valeur>
                            <valeur nom="moderated discussion / birds of a feather (BoF)"
                                ref="ignore">
                                <commentaire/>
                            </valeur>
                        </valeur>
                    </attribut>
                    <attribut nom="full_text" type="structuration" ref="ignore">
                        <commentaire>En plein texte ou en xml</commentaire>
                    </attribut>
                    <attribut nom="full_text_type" type="doc" ref="ignore">
                        <commentaire/>
                        <valeur nom="xml" ref="ignore">
                            <commentaire/>
                        </valeur>
                        <valeur nom="txt" ref="ignore">
                            <commentaire/>
                        </valeur>
                    </attribut>
                    <attribut nom="full_text_license" type="doc" ref="ignore">
                        <commentaire/>
                        <valeur nom="Creative Commons Attribution 2.0" ref="ignore">
                            <commentaire/>
                        </valeur>
                        <valeur nom="Creative Commons Attribution 4.0 International" ref="ignore">
                            <commentaire/>
                        </valeur>
                        <valeur
                            nom="This text is republished here with the permission from the original holder"
                            ref="ignore">
                            <commentaire>pas de précision sur la licence.</commentaire>
                        </valeur>
                    </attribut>
                    <attribut nom="parent_work_id" type="doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="keywords" type="doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="languages" type="doc" ref="ignore">
                        <commentaire/>
                        <valeur nom="ISO 639-1" ref="ignore">
                            <commentaire>Liste plate de langues sous la forme d'un code ISO 639-1.
                                Plusieurs langues pour un document possible.</commentaire>
                        </valeur>
                    </attribut>
                    <attribut nom="topics" type="doc" ref="ignore">
                        <commentaire>Liste plate de topics.</commentaire>
                    </attribut>
                </data_corpus>
            </corpus>
            <corpus>
                <head>
                    <name xml:id="ArticleBNF"
                        url="https://api.bnf.fr/fr/documents-de-presse-numerises-en-mode-article"
                        >Documents de presse numérisés en mode article</name>
                    <description>Sélection de documents de presse issus des collections de la BNF et
                        traitée avec une reconnaissance de la mise en page (article, section, titre
                        d'articlle, légende avec ABBYY Fine Reader.</description>
                    <auteur>Bibliothèque nationale de France</auteur>
                    <date type="creation">11-10-2023</date>
                    <refbib type="bibtex"/>
                </head>
                <data_corpus>
                    <attribut nom="ID" type="corpus-doc" ref="ignore">
                        <commentaire>1 ID pour le corpus (ici magazine), 1 ID par Document (ici
                            page)</commentaire>
                    </attribut>
                    <attribut nom="mimetype" type="corpus-doc" ref="ignore">
                        <commentaire>Format de document</commentaire>
                        <valeur nom="text/xml" ref="ignore">
                            <commentaire>1 seule valeur existante dans le corpus</commentaire>
                        </valeur>
                    </attribut>
                    <attribut nom="title" type="corpus-doc" ref="ignore">
                        <commentaire>Metadonnées en Dublin Core</commentaire>
                        <valeur nom="date-numero" ref="ignore">
                            <commentaire>Stucture du titre du corpus sous la forme date - numéro
                                exemple: 1938-03-11 (Numéro 54)</commentaire>
                        </valeur>
                        <attribut nom="subtitle" type="doc" ref="ignore">
                            <commentaire/>
                        </attribut>
                    </attribut>
                    <attribut nom="description" type="corpus-doc" ref="ignore">
                        <commentaire>Brève description du corpus/doc</commentaire>
                        <valeur nom="entry" ref="ignore">
                            <commentaire>Dans le cas du document.</commentaire>
                        </valeur>
                        <valeur nom="binding" ref="ignore">
                            <commentaire>Dans le cas du document.</commentaire>
                        </valeur>
                        <valeur nom="numero_magazine" ref="ignore">
                            <commentaire>Dans le cas du corpus, exemeple: Numéro 54</commentaire>
                        </valeur>
                    </attribut>
                    <attribut nom="type" type="corpus" ref="ignore">
                        <commentaire>Un seul type dans le corpus</commentaire>
                        <valeur nom="periodical" ref="ignore">
                            <commentaire/>
                        </valeur>
                    </attribut>
                    <attribut nom="date" type="corpus" ref="ignore">
                        <commentaire/>
                        <valeur nom="AAAA-MM-DD" ref="ignore">
                            <commentaire/>
                        </valeur>
                    </attribut>
                    <attribut nom="publisher" type="corpus" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="relation" type="corpus" ref="ignore">
                        <commentaire/>
                        <valeur nom="ark" ref="ignore">
                            <commentaire/>
                        </valeur>
                    </attribut>
                    <attribut nom="provenance" type="corpus" ref="ignore">
                        <commentaire/>
                        <valeur nom="BnF" ref="ignore">
                            <commentaire/>
                        </valeur>
                    </attribut>
                    <attribut nom="fileGrp" type="doc" ref="ignore">
                        <commentaire>Description physique du document avec ID et USE
                            (ocr)</commentaire>
                        <attribut nom="file" type="doc" ref="ignore">
                            <commentaire>Pour chaque document</commentaire>
                            <attribut nom="FLocat" type="doc" ref="ignore">
                                <commentaire/>
                                <valeur nom="href" ref="ignore">
                                    <commentaire/>
                                </valeur>
                            </attribut>
                        </attribut>
                    </attribut>
                </data_corpus>
            </corpus>
            <corpus>
                <head>
                    <name
                        url="https://api.bnf.fr/fr/documents-de-gallica-produits-au-format-tei-par-obvil"
                        xml:id="obvil">Documents de Gallica produits au format TEI par OBVIL</name>
                    <description>Jeu de données au format TEI de l'OC de 130 000 monographies
                        produites par l'OBVIL depuis Gallica.</description>
                    <auteur>OBVIL/BNF</auteur>
                    <date type="creation">11-10-2023</date>
                    <refbib type="bibtex"/>
                </head>
                <data_corpus>
                    <attribut nom="dewey" type="corpus" ref="ignore">
                        <commentaire>Organisation des documents dans le corpus avec la
                            classification Dewey</commentaire>
                    </attribut>
                    <attribut nom="abc" type="corpus" ref="ignore">
                        <commentaire>Organisation des documents dans le corpus par ordre
                            alphabétique</commentaire>
                    </attribut>
                    <attribut nom="title" type="corpus-doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="author" type="corpus" ref="ignore">
                        <commentaire/>
                        <valeur nom="auteur_key_dates" ref="ignore">
                            <commentaire>Pour le corpus : Nom des auteurs avec dates de vie et clé
                                dans Data.BnF</commentaire>
                        </valeur>
                        <valeur nom="auteur_dates" ref="ignore">
                            <commentaire>Pour le document: Nom, Prénom (dates de vie)</commentaire>
                        </valeur>
                        <attribut nom="role" type="doc" ref="ignore">
                            <commentaire/>
                            <valeur nom="Auteur du texte" ref="ignore">
                                <commentaire/>
                            </valeur>
                        </attribut>
                        <attribut nom="key" type="doc" ref="ignore">
                            <commentaire/>
                            <valeur nom="cle_data_bnf" ref="ignore">
                                <commentaire/>
                            </valeur>
                        </attribut>
                    </attribut>
                    <attribut nom="publisher" type="doc" ref="ignore">
                        <commentaire>Editeur scientifique</commentaire>
                    </attribut>
                    <attribut nom="sourceDoc" type="doc" ref="ignore">
                        <commentaire>Référence bibliographique</commentaire>
                        <attribut nom="bibl" type="doc" ref="ignore">
                            <commentaire/>
                            <attribut nom="idno" type="doc" ref="ignore">
                                <commentaire/>
                                <valeur nom="ark" ref="ignore">
                                    <commentaire/>
                                </valeur>
                            </attribut>
                            <attribut nom="publisher" type="doc" ref="ignore">
                                <commentaire>Editeur du document physique</commentaire>
                            </attribut>
                            <attribut nom="date" type="doc" ref="ignore">
                                <commentaire/>
                                <attribut nom="when" type="doc" ref="ignore">
                                    <commentaire/>
                                    <valeur nom="annee" ref="ignore">
                                        <commentaire/>
                                    </valeur>
                                </attribut>
                            </attribut>
                        </attribut>
                    </attribut>
                    <attribut nom="pb" type="structuration" ref="ignore">
                        <commentaire>Balise de structuration TEI qui indique les pages</commentaire>
                        <attribut nom="xml:id" type="structuration" ref="ignore">
                            <commentaire/>
                            <valeur nom="nom_page" ref="ignore">
                                <commentaire/>
                            </valeur>
                        </attribut>
                        <attribut nom="corresp" type="structuration" ref="ignore">
                            <commentaire/>
                            <valeur nom="ark" ref="ignore">
                                <commentaire/>
                            </valeur>
                        </attribut>
                    </attribut>
                    <attribut nom="div" type="structuration" ref="ignore">
                        <commentaire>Pour indiquer les paragraphes dans le texte </commentaire>
                    </attribut>
                    <attribut nom="head" type="structuration" ref="ignore">
                        <commentaire>Pour les titres/débuts de paragraphes...</commentaire>
                    </attribut>

                </data_corpus>
            </corpus>
            <corpus>
                <head>
                    <name xml:id="UD" url="https://universaldependencies.org/">Universal
                        Dependencies</name>
                    <description>Framework pour l'annotation grammaticale.</description>
                    <auteur>Communautaire</auteur>
                    <date type="creation">13-10-2023</date>
                    <refbib type="bibtex"/>
                </head>
                <data_corpus>
                    <attribut nom="genre" type="corpus" ref="ignore">
                        <commentaire>Attribut non nommé mais décrit au niveau de chaque corpus de
                            langue puis de sous corpus</commentaire>
                        <valeur nom="academic" ref="ignore">
                            <commentaire>Articles scientifiques dans des domaines
                                variés</commentaire>
                        </valeur>
                        <valeur nom="bible" ref="ignore">
                            <commentaire>Passages de la Bible</commentaire>
                        </valeur>
                        <valeur nom="blog" ref="ignore">
                            <commentaire>Documents internets sur sujets variés // Répétition avec
                                news possible?</commentaire>
                        </valeur>
                        <valeur nom="email" ref="ignore">
                            <commentaire>communications écrites formelles // Lettres dont
                                correspondances aussi ajoutées ici</commentaire>
                        </valeur>
                        <valeur nom="fiction" ref="ignore">
                            <commentaire>paragraphes extraits de magazines et livres de
                                fiction</commentaire>
                        </valeur>
                        <valeur nom="government" ref="ignore">
                            <commentaire>Tout ce qui provient d'une source gouvernementale (prises
                                de paroles politiques, inscriptions assyriennes....</commentaire>
                        </valeur>
                        <valeur nom="grammar-examples" ref="ignore">
                            <commentaire>Phrases issues de textes de cours.</commentaire>
                        </valeur>
                        <valeur nom="learner-essays" ref="ignore">
                            <commentaire>si erreurs dans les phrases</commentaire>
                        </valeur>
                        <valeur nom="legal" ref="ignore">
                            <commentaire>Lois et corpus juridique</commentaire>
                        </valeur>
                        <valeur nom="medical" ref="ignore">
                            <commentaire>Articles et livres scientifiques du domaine médical \\
                                Répétition avec academic? </commentaire>
                        </valeur>
                        <valeur nom="news" ref="ignore">
                            <commentaire>Presse écrite (papier et internet)</commentaire>
                        </valeur>
                        <valeur nom="nonfiction" ref="ignore">
                            <commentaire>Large corpus: littéraire, textes philosophiques, livres,
                                internet</commentaire>
                        </valeur>
                        <valeur nom="poetry" ref="ignore">
                            <commentaire/>
                        </valeur>
                        <valeur nom="reviews" ref="ignore">
                            <commentaire>commentaires informels en ligne avec orthographe non
                                normalisé, forums</commentaire>
                        </valeur>
                        <valeur nom="spoken" ref="ignore">
                            <commentaire>transcription orale (radio notamment)</commentaire>
                        </valeur>
                        <valeur nom="social" ref="ignore">
                            <commentaire>social media data: tweets, forum...</commentaire>
                        </valeur>
                        <valeur nom="web" ref="ignore">
                            <commentaire>associé à non fiction, blog et social</commentaire>
                        </valeur>
                        <valeur nom="wiki" ref="ignore">
                            <commentaire>Tout ce qui a pour source un wiki</commentaire>
                        </valeur>
                    </attribut>
                    <attribut nom="family" type="corpus" ref="ignore">
                        <commentaire>Famille de la langue du corpus </commentaire>
                        <valeur nom="family_WALS" ref="ignore">
                            <commentaire>Sélectionné dans la colonne family ici
                                https://wals.info/languoid</commentaire>
                        </valeur>
                        <attribut nom="genus" type="corpus" ref="ignore">
                            <commentaire>Branche de la langue</commentaire>
                            <valeur nom="genus_WALS" ref="ignore">
                                <commentaire>Sélectionné dans la colonne genus ici
                                    https://wals.info/languoid</commentaire>
                            </valeur>
                            <attribut nom="language" type="corpus" ref="ignore">
                                <commentaire>Corpus organisés par rapport à la langue</commentaire>
                                <valeur nom="language_WALS" ref="ignore">
                                    <commentaire>Langage écrit en toutes lettres</commentaire>
                                </valeur>
                            </attribut>
                        </attribut>
                    </attribut>
                    <attribut nom="quantite_dataset" type="corpus" ref="ignore">
                        <commentaire>Nombre de datasets contenus dans le corpus de
                            langue</commentaire>
                    </attribut>
                    <attribut nom="quantite_token" type="corpus" ref="ignore">
                        <commentaire>Quantité de tokens contenus dans le corpus</commentaire>
                    </attribut>
                    <attribut nom="title" type="corpus-doc" ref="ignore">
                        <commentaire/>
                    </attribut>
                    <attribut nom="content" type="corpus-doc" ref="ignore">
                        <commentaire>Liste les types de contenus dans le corpus/doc</commentaire>
                        <valeur nom="lemmas" ref="ignore"><commentaire/></valeur>
                        <valeur nom="features" ref="ignore"><commentaire/></valeur>
                        <valeur nom="secondary_dependencies" ref="ignore"><commentaire/></valeur>
                    </attribut>
                    <attribut nom="licence" type="corpus-doc" ref="ignore">
                        <commentaire>Différents types de licence CCBY en général.</commentaire>
                    </attribut>
                </data_corpus>
            </corpus>
        </grp-corpus>
    </body>
</sota_meta>
